{
  "manifest_version": 3,
  "name": "The Crims Script",
  "version": "1.0",
  "description": "Uma extens√£o para auxiliar no jogo The Crims.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.thecrims.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.thecrims.com/*"],
      "js": ["content.js"]
    }
  ]
}
